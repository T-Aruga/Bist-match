<div class="row">
  <div class="col-md-3">
    <%= render 'user_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        お気に入り
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @user do |f| %>

            <div class="row">
                <div class="form-group">
                  <label>好きな飲食店のジャンル</label>
                  <%= f.collection_select :jenre_id, Jenre.all, :id, :name, :prompt => "選択して下さい", class: 'form-control' %>
                </div>
              </div>


              <div class="row">
                <div class="form-group">
                  <label>好きなお店</label>
                  <%= f.text_field :favorite_store, placeholder: "一番好きなお店を入力...", class: "form-control", required: true %>
                </div>
              </div>

              <div class="text-center">
                <%= f.submit "保存", class: "btn btn-form" %>
              </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
