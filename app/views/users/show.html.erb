<div class="container row-space-4">
  <div class="row">
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading"><%= @user.fullname %> 様</div>
        <div class="panel-body">
          <div class="image-wrapper">
            <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: "no_image.png", size:'100x100', class: "img-circle" %><br/><br/>
          </div>
          <ul class="sidebar-list user-info">
            <li>E-mail: <span class="pull-right icon-babu"><i class="fas fa-envelope"></i></span><%= @user.email %></li>
            <li>職業: <span class="pull-right icon-babu"><i class="fas fa-user-md"></i></span><%= @user.job %></li>
            <li>好きなジャンル: <span class="pull-right icon-babu"><i class="fas fa-utensils"></i></span><%= @user.jenre.name %></li>
            <li>好きなお店: <span class="pull-right icon-babu"><i class="fas fa-utensils"></i></span><%= @user.favorite_store %></li><br>
            <% if current_user && current_user != @user %>
              <li><%= render partial: "messages/message_form", locals: {user: @user} %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading"><%= @user.fullname %></div>
        <div class="panel-body">
          <div class="description row-space-3">
            <%= @user.description %>
          </div>
        </div>
      </div>

      <h4>ホストプラン一覧 (<%= @plans.length %>)</h4><br/>

      <div class="row">
        <%= render partial: "plans/plan_list", locals: {plans: @plans} %>
      </div>
      <br/>

      <div class="panel panel-default">
        <div class="panel-heading">ゲストからのレビュー (<%= @guest_reviews.count %>)</div>
        <div class="panel-body">
          <div class="row">
            <%= render "reviews/guest_list" %>
          </div>
        </div>
      </div>
      <br/>

      <div class="panel panel-default">
        <div class="panel-heading">ホストからのレビュー (<%= @host_reviews.count %>)</div>
        <div class="panel-body">
          <div class="row">
            <%= render "reviews/host_list" %>
          </div>
          </div>
      </div>

    </div>
  </div>
</div>
