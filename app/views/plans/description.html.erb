<div class="row">
  <div class="col-md-3">
    <%= render 'plan_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        プラン紹介
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @plan do |f| %>

          <div class="row">
              <div class="form-group">
                <label>タイトル</label>
                <%= f.text_field :title, placeholder: "プランのタイトルを入力...", class: "form-control", required: true %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>プラン紹介</label>
                <%= f.text_area :summary, rows: 7,  placeholder: "プラン紹介コメントを入力...", class: "form-control", required: true %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>参加条件・注意事項</label>
                <%= f.text_area :requirement, rows: 7,  placeholder: "参加条件・注意事項を入力...", class: "form-control", required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "保存", class: "btn btn-normal" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
