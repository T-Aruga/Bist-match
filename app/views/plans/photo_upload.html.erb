<div class="row">
  <div class="col-md-3">
    <%= render 'plan_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        プラン画像
      </div>

      <div class="panel-body">
        <div class="container">
          <div class="row">
            <div class="col-md-offset-3 col-md-6">
              <!-- PHOTOS UPLOAD GOES HERE -->

              <%= form_for @plan, url: plan_photo_path(@plan), method: :patch do |f| %>
                <div class="row">
                  <div class="form-group">
                    <span class="btn btn-default btn-file text-babu">
                      <i class="fas fa-cloud-upload" aria-hidden="true"></i> 画像を選ぶ
                      <%= f.attachment_field :photos_images, multiple: true, class: 'form-control' %>
                    </span>
                  </div>
                </div>

                <div class="text-center">
                  <%= f.submit "選択画像を追加", class: "btn btn-form" %>
                </div>

              <% end %>
            </div>
          </div>

          <div id="photos"><%= render 'photos/photos_list' %></div>
        </div>
      </div>

    </div>
  </div>
</div>
