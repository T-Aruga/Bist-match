<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'plan_menu' %>
    </div>
    <div class="col-md-9">
      <div class="panel panel-default">

        <div class="panel-heading">
          プラン開催店舗情報
        </div>

        <div class="panel-body">
          <div class="container">
            <%= form_for @restaurant do |f| %>

            <div class="row">
                <div class="form-group">
                  <label>店名</label>
                  <%= f.text_field :name, placeholder: "店名を入力...", class: "form-control", required: true %>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label>住所</label>
                  <%= f.text_area :address, rows: 3,  placeholder: "住所を入力...", class: "form-control", required: true %>
                </div>
              </div>


              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>平均予算</label>
                    <%= f.text_field :budget, placeholder: "平均予算を入力...", class: "form-control", required: true %>
                  </div>
                </div>


                <div class="col-md-6">
                  <div class="form-group">
                    <label>最寄駅の路線</label>
                    <%= f.text_field :line, placeholder: "最寄り駅の路線を入力...", class: "form-control", required: true %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>最寄駅</label>
                    <%= f.text_field :station, placeholder: "最寄り駅を入力...", class: "form-control", required: true %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <label>駅からの徒歩距離(分)</label>
                    <%= f.number_field :walk, min:1 ,max:60, class: "form-control", required: true %>
                  </div>
                </div>
              </div>



              <div class="text-center">
                <%= f.submit "保存", class: "btn btn-normal" %>
              </div>

            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
