<div class="container">
  <div class="row">
    <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item"><%= link_to "ホストプラン一覧", your_plans_path, class: "sidebar-link active" %></li>
        <li class="sidebar-item"><%= link_to "参加希望一覧", your_reservation_path, class: "sidebar-link" %></li>
        <li class="sidebar-item"><%= link_to "参加プラン一覧", your_entry_path, class: "sidebar-link" %></li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          ホストプラン一覧
        </div>
        <div class="panel-body">

          <% @plans.each do |plan| %>
            <div class="row">
              <div class="col-md-2">
                <%= plan.plan_date %>
              </div>
              <div class="col-md-2">
                <%= image_tag "#{plan.restaurant.image_url}", size: '100x100' %>
              </div>
              <div class="col-md-5">
                <h4><%= plan.title %></h4>
              </div>
              <div class="col-md-3 right">
                <%= link_to "編集する", listing_plan_path(plan), class: "btn btn-normal" %>
                <p class="row-space-2"><%= plan.status %></p>
              </div>
            </div>
            <hr/>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
