<div class="container row-space-4">
  <h2>新規プラン作成</h2>
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        現在のプラン登録店舗情報
      </div>

      <div class="panel-body">
        <div class="col-md-offset-2 col-md-4">
        <% if @restaurant.present? %>
          <%= image_tag "#{@restaurant.image_url}", size: '200x200'  %>
        <% else %>
          <%= image_tag 'default_image.png', size: '200x200' %>
        <% end %>
        </div>

        <div class="col-md-6">
          <% if @restaurant.present? %>
            <h4>店名<h4><br>
            <p><%= @restaurant.name %></p><br>
            <h4>住所</h4><br>
            <p><%= @restaurant.address %></p>
          <% else %>
            <h3>登録情報はありません</h3>
          <% end %>
          <hr>

          <%= link_to "プランに合うお店を探す", search_gnabi_path, class: "btn btn-normal" %>

          <br><br>

          <%= form_for @plan do |f| %>
            <label>タイトル</label>
            <%= f.text_field :title, placeholder: "プランのタイトルを入力...", class: "form-control", required: true %>
            <br>
            <%= button_tag type: "submit", class: "btn btn-form"  do %>
              <i>この店舗でプランを新規作成する</i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
