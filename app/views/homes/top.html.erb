
<!-- Main Visual -->
<div class="bg">
  <p class='bg-text1'>毎日をドラマティックに！</P>
  <p class='bg-text2'>食事を通じて最高の出会いをあなたに届けます</p>
</div>


<div class="container">
  <!-- Search From -->
  <div class="row">
    <div class="col-md-7 banner">
    </div>
  </div>

  <%= form_tag search_path, method: :get do %>
    <div class="row">
      <div class="col-md-6">
        <%= text_field_tag :search, params[:search], placeholder: "興味のある場所を入力", class: "form-control", id: "autolocation" %>
      </div>
      <div class="col-md-2">
        <%= text_field_tag :plan_date, params[:plan_date], placeholder: "プラン開催日", class: "form-control datepicker" %>
      </div>
      <div class="col-md-2">
        <%= text_field_tag :start_time, params[:start_time], placeholder: "開始時間", class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= text_field_tag :endt_time, params[:end_time], placeholder: "終了時間", class: "form-control" %>
      </div>
    </div>
    <br/><br/>

    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
      </div>
    </div>
  <% end %>

  <br/><hr/><br/>





  <!-- PLANS -->
  <div><h3>Plans</h3></div>
  <br/>

  <div class="row">
    <% @plans.each do |plan| %>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag "#{plan.restaurant.image_url}", size: '200x200'  %>
          </div>
          <div class="panel-body">
            <%= link_to plan.title, plan %><br/>
            ¥<%= plan.price %>&nbsp;&nbsp;
            <%= plan.status %>
          </div>
        </div>
      </div>
  <% end %>
  </div>
</div>





<script>
  $(function(){

      $('#plan_date').datepicker({
        dateFormat: 'dd-mm-yy',
        minDate: 0,
        maxDate: '3m',
      });
    });

</script>
