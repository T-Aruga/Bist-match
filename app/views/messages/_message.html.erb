<div class="panel">
  <div class="panel-body">
    <%= attachment_image_tag message.user, :image, :fill, 40, 40, fallback: "no_image.png", size:'40x40', class: "img-circle" %>
    <strong><%= message.user.fullname %></strong>
    <span class="pull-right"><%= message.message_time %></span>
    <br/>
    <div class="row-space-2">
      <%= message.content %>
    </div>
  </div>
</div>
