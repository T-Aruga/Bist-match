<% if @photos.count > 0 %>
  <br/><br/>

  <div class="row">
    <% @photos.each do |photo| %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= attachment_image_tag photo, :image, :fill, 80, 80  %>
          </div>
          <div class="panel-body">
            <span class="pull-right">
              <%= link_to root_path, data: {confirm: "Are you sure?"} do %>
                <i class="fas fa-trash fa-lg" aria-hidden="true"></i>
              <% end %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
